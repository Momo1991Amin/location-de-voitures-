{% extends "base.html.twig" %}

{% block title %}Modification profile{% endblock %}

{% block body %}
    <div class="container">
         {{ form_start(form, {'attr' : {class :'form_register', id : "register"}}) }}
        <h1>Modifier votre profil {{app.user.fullname}}</h1>
        <table>
                <span id='erreur_register'></span>
            <tr>
                <td class="firstname">
                    {{ form_widget(form.firstName)}}
                </td>
            </tr>
            <tr>
                <td class="lastname">
                    {{ form_widget(form.lastName)}}
                </td>
            </tr>
            <tr>
                <td class="email">
                    {{ form_widget(form.email)}}
                </td>
            </tr>
            <tr>
                <td class="avatar">
                    {{ form_widget(form.avatar)}}
                </td>
            </tr>
            <tr>
                <td>
                    <p><small>En modifiant votre compte, vous acceptez de vous conformer à la Politique de confidentialité</small></p> 
                    <p>et aux <a href="">Conditions générales de vente</a></small></p>
                </td>
            </tr>
            <tr>
                <td class="submit">
                    <button type="submit" class="btn" name="submit_login">Modifier</button>
                </td>
            </tr>
        </table>        
        {{ form_end(form) }}        
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('js/register') }}
{% endblock %}